
@model IEnumerable<CategoryViewModel>
<!-- -------------------------Hero Section----------------------- -->
<div class="hero section">
    <img class="img-fluid" src="~/images/siteAssets/hero-background.jpg" />
    <div class="hero-heading">
        <h2 class="hero-heading-text">Watch your favourite <strong class="highlighted-text">movies</strong> and <strong class="highlighted-text">TV shows</strong> right away on<strong> SpaceWatch!</strong></h2>
        <a id="HeroRegisterButton" data-toggle="modal" data-target="#UserRegistrationModal" class="btn btn-lg btn-orchid text-white hero-register-button">
            Become a member now
        </a>
    </div>
</div>
<hr class="section-divider" />

<!-- -------------------------Categories/Genres Section----------------------- -->
<div id="Genres" class="category section">
    <h3 class="section-header mb-1"><i class="fas fa-film  mr-2 ml-2 text-black-50"></i>All Media Genres</h3>
    <hr class="section-divider-dark mt-0 mb-3"/>
    @{
        const int itemsPerRow = 4;

        var count = (Model.Count() / itemsPerRow);
        var catList = new List<CategoryViewModel>();
    }
    @for (int i = 0; i <= count; i++)
    {
        catList = Model.Skip(i * itemsPerRow).Take(itemsPerRow).ToList();

        <partial name="_DisplayCardRowPartial" model="catList" />
    }
</div>
<hr class="section-divider" />

<!-- -------------------------Contact us Section----------------------- -->
<div id="ContactUs" class="contact-us section">
    <h3 class="section-header mb-1"><i class="fas fa-phone-volume  mr-2 ml-2 text-black-50"></i>Contact Us</h3>
    <hr class="section-divider-dark mt-0 mb-3" />
    <div class="col-md-8 mb-3 mt-3">
        <h4 class="bolder text-black-50">Have questions? We are here to help you!</h4><br />
        <p class="text-justify text-lg-1-1-rem">
            <strong>For quickest response you can reach us via phone at:</strong> (+359) 591-351<br />
            <strong>Or via email:</strong> spacewatch@@support.com<br />
        </p>
        <hr class="mb-2" />
        <p class="text-justify text-lg-1-1-rem">
            <strong>Visit our office every week day from 09:00 AM to 06:00 PM at:</strong><br />
            <span class="highlighted-text bolder">SpaceWatch</span> Media Group (Bulgaria) Limited,<br />
            4th Floor, Investment House,<br />
            101 Bulgaria Boulevard, Pazardzhik, Post Code: 4400<br />
        </p>
        <hr class="mb-2" />
    </div>
    <div class="mt-3">
        <div class="col-md-8">
            <form>
                <input type="hidden" />
                <div class="form-group">
                    <label for="Name" class="control-label">Name: </label>
                    <input id="Name" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="Email" class="control-label">Email: </label>
                    <input id="Email" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="Subject" class="control-label">Subject: </label>
                    <input id="Subject" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="MessageBody" class="control-label">Message: </label>
                    <textarea id="MessageBody" cols="50" class="form-control" rows="10"></textarea>
                </div>
                <div class="form-group d-flex">
                    <input type="button" value="Send Email" class="btn btn-orchid ml-auto" />
                </div>
            </form>
        </div>
    </div>
</div>
<hr class="section-divider" />

<!-- -------------------------About us Section----------------------- -->
<div id="AboutUs" class="about-us section">
    <h3 class="section-header mb-1"><i class="fas fa-building mr-2 ml-2 text-black-50"></i>About Us</h3>
    <hr class="section-divider-dark mt-0 mb-3" />
    <div class="col-md-auto mt-3 mb-3">
        <p class="text-justify text-lg-1-1-rem">
            <strong class="highlighted-text">SpaceWatch</strong> is a media streaming service that offers a wide variety of award-winning TV shows, movies, anime, documentaries, and more on thousands of internet-connected devices.
            <br />
            You can watch as much as you want, whenever you want without a single commercial – all for one low monthly price and valid user account. There's always something new to discover and new TV shows and movies are added every week!
        </p>
        <p class="text-justify text-lg-1-1-rem">
            <strong class="text-black-50">Watch anywhere, anytime.</strong> Sign in with your SpaceWatch account to watch instantly on the web at spacewatch.com from your personal computer or on any internet-connected device, including smart TVs, smartphones, tablets, streaming media players and game consoles.
            <br />
            You can also download your favorite shows with the iOS, Android, or Windows 10(11) app. Use downloads to watch while you're on the go and without an internet connection.
        </p>
    </div>
</div>