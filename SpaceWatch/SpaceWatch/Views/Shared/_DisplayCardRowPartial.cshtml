
@model IEnumerable<CategoryViewModel>

<div class="row mt-3">
    @foreach (CategoryViewModel item in Model)
    {
        <div class="col-md-3">
            <a href="#" class="text-dark text-decoration-none RegisterLink" data-categoryId="@item.Id">
                <div class="card">
                    <img src="@item.ThumbnailImagePath" class="img-thumbnail" alt="@item.Title" />
                    <div class="card-body">
                        <h5 class="card-title bolder highlighted-text">@item.Title</h5>
                        <p class="card-text text-lg-1-1-rem">
                           @if(item.Description.Length > 150)
                            {
                                @item.Description.Substring(0, 149);<span class="highlighted-text text-sm-0-8-rem">... Subscribe to find out more.</span>
                            }
                            else
                            {
                                @item.Description
                            }
                        </p>
                    </div>
                </div>
            </a>
        </div>
    }
</div>
