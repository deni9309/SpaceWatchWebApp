<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SpaceWatch</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/fontawesome/css/all.min.css" rel="stylesheet" />
</head>
<body class="background">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark text-white bg-dark text-lg-1-1-rem box-shadow mb-3 fixed-top">
            <div class="container">
                <a class="navbar-brand m-0" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/images/siteAssets/SpaceWatchLogo.png" width="180" class="m-0 p-0" /></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon text-white"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between text-lg-1-1-rem">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item text-lg-1-1-rem">
                            <a class="btn rounded-0 nav-link bg-dark text-white text-lg-1-1-rem" asp-area="" asp-controller="Home" asp-action="Index"><i class="fas fa-home mr-1 ml-1"></i>Home</a>
                        </li>
                    
                        <partial name="_MenuLayoutPartial" />
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3 main-default">
            @RenderBody()

        </main>
    </div>

    <footer class="footer bg-dark text-light text-muted">
        <div class="container">
            &copy; 2022 - SpaceWatch - <a asp-area="" asp-controller="Home" asp-action="Privacy" class="highlighted-text bolder"><i class="fas fa-shield-alt mr-1 ml-1 "></i>Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
