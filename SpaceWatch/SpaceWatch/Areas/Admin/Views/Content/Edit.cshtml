@model ContentViewModel

@{
	ViewData["Title"] = "Edit";
}
<div class="section">
	<h3 class="section-header">Edit Content</h3>
	<hr class="section-divider" />
	<h5>From category <strong class="text-black-50">@Model.CategoryName</strong></h5>
	<hr class="section-divider" />
	<div class="container-fluid align-items-center mt-3">
		<div class="container col-md-8 ">
			<form asp-action="Edit">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<input type="hidden" asp-for="Id" />
				<input type="hidden" asp-for="CategoryId" />
				<input type="hidden" asp-for="CatItemId" />
				<div class="form-group">
					<label asp-for="Title" class="control-label"></label>
					<input asp-for="Title" class="form-control" />
					<span asp-validation-for="Title" class="text-danger"></span>
				</div>

				<div class="form-group">
					<label asp-for="HtmlContent" class="control-label"></label>
					<textarea asp-for="HtmlContent" contenteditable="true" rows="10" class="form-control"></textarea>
					<span asp-validation-for="HtmlContent" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="VideoLink" class="control-label"></label>
					<input asp-for="VideoLink" class="form-control" />
					<span asp-validation-for="VideoLink" class="text-danger"></span>
				</div>
				<div class="form-group">
					<input type="submit" value="Save" class="btn btn-orchid mb-1" /> |
					<a class="btn btn-outline-dark mb-1" asp-action="Index" asp-controller="CategoryItem" asp-route-categoryId="@Model.CategoryId"><i class="fas fa-angle-double-left mr-1 ml-1"></i>Back to List</a>
				</div>
			</form>
		</div>
	</div>
</div>
@section Scripts {
	@{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
