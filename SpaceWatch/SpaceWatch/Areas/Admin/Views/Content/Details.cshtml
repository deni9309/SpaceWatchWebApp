@model ContentViewModel

@{
    ViewData["Title"] = "Details";
}

<div class="section">
    <h3 class="section-header">Content Details</h3>
    <hr class="section-divider" />
    <h5>From category <strong class="text-black-50">@Model.CategoryName</strong></h5>
    @*<h5>Media Item: <strong class="text-black-50">@ViewBag.CategoryItemTitle</strong> </h5>*@
    <hr class="section-divider" />
    <div class="col-md-12 p-2">
        <dl class="row mt-3">
            <dt class="col-sm-2">
                Title
            </dt>
            <dd class="col-sm-10">
                @Model.Title
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.HtmlContent)
            </dt>
            <dd class="col-sm-10">
                @Model.HtmlContent
            </dd>
            <dt class="col-sm-2">
                Video Link
            </dt>
            <dd class="col-sm-10">
                @Model.VideoLink
            </dd>
        </dl>
    </div>
    <div class="col-md-12 p-2">
        <div class="row p-2">
            <a class="btn btn-orchid" asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
            <a class="btn btn-outline-dark" asp-action="Index" asp-controller="CategoryItem" asp-route-categoryId="@Model.CategoryId"><i class="fas fa-angle-double-left mr-1 ml-1"></i>Back to List</a> | 
            <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
        </div>
    </div>
</div>