@model MediaTypeViewModel

@{
	ViewData["Title"] = "Delete";
}

<div class="section">
	<h3 class="section-header">Are you sure you want to delete this media type?</h3>
	<hr class="section-divider" />

	<div class="col-md-12 p-2">
		<dl class="row mt-3">
			<dt class="col-sm-2">
				@Model.Title
			</dt>
			<dd class="col-sm-10">
				@Model.Title
			</dd>
			<dt class="col-sm-2">
				@Model.ThumbnailImagePath
			</dt>
			<dd class="col-sm-10">
				@Model.ThumbnailImagePath
			</dd>
		</dl>
	</div>
	<div class="col-md-12 p-2">
		<div class="row p-2">
			<form asp-action="Delete" method="post">
				<input type="hidden" asp-for="Id" />
				<input onclick="return confirm('This action can not be undone!\nAre you sure you want to proceed?');" type="submit" value="Delete" class="btn btn-danger" /> |
				<a class="btn btn-outline-dark" asp-route-id="@Model.Id" asp-action="Edit"><i class="fa-solid fa-pen-to-square mr-1 ml-1"></i>Go to Edit Page</a> |
				<a class="btn btn-outline-dark" asp-action="Index"><i class="fas fa-angle-double-left mr-1 ml-1"></i>Back to List</a>
			</form>
		</div>
	</div>
</div>
