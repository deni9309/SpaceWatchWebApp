@model MediaTypeViewModel

@{
    ViewData["Title"] = "Create";
}

<div class="section">
    <h3 class="section-header">Create new Media Type</h3>
    <hr class="section-divider" />
    <div class="container-fluid align-items-center mt-3">
        <div class="container col-md-8 mb-8">
            <form asp-controller="MediaType" asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ThumbnailImagePath" class="control-label"></label>
                    <input asp-for="ThumbnailImagePath" class="form-control" />
                    <span asp-validation-for="ThumbnailImagePath" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-orchid mb-1" value="Create" /> |
                    <a class="btn btn-outline-dark mb-1" asp-action="Index"><i class="fas fa-angle-double-left mr-1 ml-1"></i>Back to List</a>
                </div>
            </form>
            
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
