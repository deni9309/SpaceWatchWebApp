@model SpaceWatch.Areas.Admin.Models.UserCategoryListModel
@using SpaceWatch.Comparers

<table class="table table-orchid table-striped table-hover">
    <thead>
        <tr>
            <th></th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Users != null)
        {
            @foreach (var user in Model.Users)
            {
                <tr>
                    <td style="text-align:center;">
                        @if (Model.UsersSelected != null && Model.UsersSelected.Contains(user, new CompareUsers()))
                        {
                            <input type="checkbox" id="UsersSelected" name="UsersSelected" class="form-check-input" value="@user.Id" checked />
                        }
                        else
                        {
                            <input type="checkbox" id="UsersSelected" name="UsersSelected" class="form-check-input" value="@user.Id" />
                        }
                    </td>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.Email</td>
                </tr>
            }
        }
    </tbody>
</table>
