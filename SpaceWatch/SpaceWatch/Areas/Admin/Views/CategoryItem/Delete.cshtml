@model CategoryItemViewModel

@{
    ViewData["Title"] = "Delete";
}
<div class="section">
    <h3 class="section-header">Delete Media Item</h3>
    <hr class="section-divider" />
    <h5 class="text-black-50">Are you sure you want to delete this media?</h5>
    <hr class="section-divider" />
    <div class="col-md-12 p-2">
        <h5>From category <strong class="text-black-50">@TempData["CategoryTitle"]</strong></h5>
        @{
            TempData.Keep("CategoryTitle");
         }
        <dl class="row mt-3">
            <dt class="col-sm-2">
                <span class="text-lg-1-1-rem">Title</span>
            </dt>
            <dd class="col-sm-10">
                <strong class="text-lg-1-1-rem highlighted-text">@Model.Title</strong>
            </dd>
            <dt class="col-sm-2">
                Description
            </dt>
            <dd class="col-sm-10">
                @Model.Description
            </dd>
            <dt class="col-sm-2">
               Release Date
            </dt>
            <dd class="col-sm-10">
                @Model.DateTimeItemReleased.Date.ToString("dd.MM.yyyy")
            </dd>
        </dl>
    </div>
    <div class="col-md-12 p-2">
        <div class="row p-2">
            <form asp-controller="CategoryItem" asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="CategoryId" />
                <input type="submit" onclick="return confirm('This action can not be undone!\nAre you sure you want to proceed?');" value="Delete" class="btn btn-danger" /> |
                <a class="btn btn-outline-dark" asp-route-id="@Model.Id" asp-action="Edit"><i class="fa-solid fa-pen-to-square mr-1 ml-1"></i>Go to Edit Page</a> |
                <a class="btn btn-outline-dark" asp-action="Index" asp-route-categoryId="@Model.CategoryId"><i class="fas fa-angle-double-left mr-1 ml-1"></i>Back to List</a>
            </form>
        </div>
    </div>
</div>
