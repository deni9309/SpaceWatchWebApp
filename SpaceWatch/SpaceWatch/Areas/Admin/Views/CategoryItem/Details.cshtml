@model CategoryItemViewModel

@{
	ViewData["Title"] = "Details";
}
<div class="section">
	<h3 class="section-header">Media Item's Detalis</h3>
	<hr class="section-divider" />
	<h5>From category <strong class="text-black-50">@TempData["CategoryTitle"]</strong></h5>

	@{
		TempData.Peek("CategoryTitle");
	}
	<hr class="section-divider" />

	<div class="col-md-12 p-2">
		<dl class="row mt-3">
			<dt class="col-sm-2"><span class="text-lg-1-1-rem">Title</span></dt>
				<dd class="col-sm-10"><strong class="text-lg-1-1-rem highlighted-text">@Model.Title</strong></dd>
			<dt class="col-sm-2">Description</dt>
				<dd class="col-sm-10">@Model.Description</dd>
			<dt class="col-sm-2">Release Date</dt>
				<dd class="col-sm-10">@Model.DateTimeItemReleased</dd>
		</dl>
	</div>
	<div class="col-md-12 p-2">
		<div class="row p-2">
			<a class="btn btn-orchid" asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
			<a class="btn btn-outline-dark" asp-action="Index" asp-route-categoryId="@Model.CategoryId"><i class="fas fa-angle-double-left mr-1 ml-1"></i>Back to List</a>
		</div>
	</div>
</div>