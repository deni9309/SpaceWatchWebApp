@model CategoryViewModel

@{
    ViewData["Title"] = "Delete";
}

<div class="section">
    <h3 class="section-header">Delete</h3>
    <hr class="section-divider" />
    <h5 class="text-black-50">Are you sure you want to delete this category?</h5>
    <hr class="section-divider" />
        <h5 class="pl-2">Category <strong class="text-black-50">@Model.Title</strong></h5>
        <dl class="row flex-column p-2 mt-3">
            <dt class="col-4">
                Title
            </dt>
            <dd class="col-6">
                @Model.Title
            </dd>
            <dt class="col-4">
                Description
            </dt>
            <dd class="col-sm-10">
                @Model.Description
            </dd>
            <dt class="col-4 mb-2">
                Image
            </dt>
            <dd class="col-sm-10">
                <img src="@Model.ThumbnailImagePath" class="img-thumbnail" style="width:30em" alt="@Model.Title" />
            </dd>
        </dl>
    <div class="col-md-12 p-2">
        <div class="row p-2">
          <form asp-action="Delete" method="post">
				<input type="hidden" asp-for="Id" />
				<input onclick="return confirm('This action can not be undone!\nAre you sure you want to proceed?');" type="submit" value="Delete" class="btn btn-danger" /> |
				<a class="btn btn-outline-dark" asp-route-id="@Model.Id" asp-action="Edit"><i class="fa-solid fa-pen-to-square mr-1 ml-1"></i>Go to Edit Page</a> |
				<a class="btn btn-outline-dark" asp-action="Index"><i class="fas fa-angle-double-left mr-1 ml-1"></i>Back to List</a>
			</form>
        </div>
    </div>
</div>