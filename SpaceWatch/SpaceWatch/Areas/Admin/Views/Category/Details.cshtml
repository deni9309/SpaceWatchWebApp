@model CategoryViewModel

@{
	ViewData["Title"] = "Details";
}
<div class="section">
	<h3 class="section-header">Details</h3>
	<h5 class="pl-2">Category <strong class="text-black-50">@Model.Title</strong></h5>
	<hr class="section-divider" />
	<div class="container-fluid align-items-center mt-3">
		<div class="container col-md-8 ">
			<dl class="p-2 mt-3">
				<dt class="col-auto mb-2">
					Title
				</dt>
				<dd class="col-auto">
					@Model.Title
				</dd>
				<dt class="col-auto mb-2">
					Description
				</dt>
				<dd class="col-auto">
					@Model.Description
				</dd>
				<dt class="col-auto mb-2">
					Image
				</dt>
				<dd class="col-auto">
					<img src="@Model.ThumbnailImagePath" class="img-thumbnail" style="width:35em" alt="@Model.Title" />
				</dd>
			</dl>

			<div class="p-2 mt-3">
				<div class="col-auto mb-4">
					<a class="btn btn-orchid mb-1" asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
					<a class="btn btn-outline-dark mb-1" asp-action="Index"><i class="fas fa-angle-double-left mr-1 ml-1"></i>Back to List</a> |
					<a class="btn btn-outline-danger mb-1" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
				</div>
			</div>
		</div>
	</div>
</div>